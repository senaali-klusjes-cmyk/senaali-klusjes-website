rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to all documents for everyone
    match /{document=**} {
      allow read: if true;
    }
    
    // Allow write access only for authenticated users
    match /albums/{document} {
      allow write: if request.auth != null;
    }
    
    match /portfolio/{document} {
      allow write: if request.auth != null;
    }
    
    match /quotes/{document} {
      allow write: if true; // Allow anyone to submit quotes
      allow read: if request.auth != null; // Only admin can read quotes
    }
    
    match /reviews/{document} {
      allow write: if request.auth != null;
    }
    
    match /projects/{document} {
      allow write: if request.auth != null;
    }
  }
}